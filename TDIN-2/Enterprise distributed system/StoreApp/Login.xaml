<Window x:Class="StoreApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="215*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <Label Content="username" HorizontalAlignment="Left" Margin="40,101,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="40,127,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBox" Width="120" Height="23"  Margin="105,130,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="105,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="123,158,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
