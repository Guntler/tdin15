<Window x:Class="StoreApp.Shippings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shippings" Height="300" Width="300">
    <Grid>
        <ListBox Name="ListContainer" HorizontalAlignment="Left" Height="100" Margin="34,26,0,0" VerticalAlignment="Top" Width="228" RenderTransformOrigin="0.508,-0.085" SelectionChanged="ListContainer_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <Button Content="Add" HorizontalAlignment="Left" Width="60" Height="23" VerticalAlignment="Top" Margin="0,2,0,0" Click="Button_Click"/>
                        <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="Title: {Binding Book} shipped {Binding Amount} copies." Width="128" Margin="10,4,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Window>
