<Window x:Class="StoreApp.Shippings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shippings" Height="300" Width="300">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="34,26,0,0" VerticalAlignment="Top" Width="228" RenderTransformOrigin="0.508,-0.085">
            <ListBoxItem Height="30" Selected="ListBoxItem_Selected">
                <StackPanel Height="25" Width="206" Orientation="Horizontal">
                    <Button Content="Add" HorizontalAlignment="Left" Width="60" Height="23" VerticalAlignment="Top" Margin="0,2,0,0" Click="Button_Click"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="128" Margin="10,4,0,0"/>

                </StackPanel>
            </ListBoxItem>

        </ListBox>
    </Grid>
</Window>
